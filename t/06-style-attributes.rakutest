use v6.d;

use Test;
use Hyperscript;
constant &h = &hyperscript;

constant $expected = Q[<h1 class="fun" style="font-family: 'Comic Sans MS'">Happy Birthday!</h1>];

plan 1;

my $result = h(
  'h1.fun',
  { style => { :font-family<'Comic Sans MS'> } },
  'Happy Birthday!'
);

is $result, $expected, 'produces HTML with style';

done-testing;
